{
  "name": "smc-connect",
  "scripts": {
  },
  "env": {
    "CANONICAL_URL": {
      "required": true
    },
    "DOMAIN_NAME": {
      "required": true
    },
    "ENABLE_CACHING": {
      "required": true
    },
    "ENABLE_HTTPS": {
      "required": true
    },
    "GOOGLE_ANALYTICS_DOMAIN": {
      "required": true
    },
    "GOOGLE_ANALYTICS_ID": {
      "required": true
    },
    "GOOGLE_MAPS_API_KEY": {
      "required": true
    },
    "GOOGLE_TRANSLATE_API_TOKEN": {
      "required": true
    },
    "GOOGLE_TRANSLATE_CUSTOMIZATION_CODE": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "LATEST_COMMIT_HASH": {
      "required": true
    },
    "OHANA_API_ENDPOINT": {
      "required": true
    },
    "OHANA_API_TOKEN": {
      "required": false
    },
    "READTHIS_DRIVER": {
      "required": true
    },
    "RECAPTCHA_SECRET_KEY": {
      "required": true
    },
    "RECAPTCHA_SITE_KEY": {
      "required": true
    },
    "REDISCLOUD_URL": {
      "required": true
    },
    "PATH": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true,
      "value": "true"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true,
      "value": "true"
    },
    "SECRET_TOKEN": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
    "TZ": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "rediscloud",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
